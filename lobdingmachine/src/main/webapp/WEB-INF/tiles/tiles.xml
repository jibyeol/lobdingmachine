<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
	<definition name="default" template="/WEB-INF/tiles/layouts/main-layout.jsp">
		<put-attribute name="title" value="김지별"/>
		<put-attribute name="header" value="/WEB-INF/tiles/layouts/include/header.jsp" />
		<put-attribute name="navigation" value="/WEB-INF/tiles/layouts/include/nav.jsp" />
		<put-attribute name="body" value="/WEB-INF/tiles/layouts/include/body.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/layouts/include/footer.jsp" />
	</definition>
	
	<definition name="login" template="/WEB-INF/tiles/layouts/none.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layouts/include/header.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/common/login.jsp"/>
	</definition>
	
	<definition name="*/*" extends="default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="*/*/*" extends="default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>